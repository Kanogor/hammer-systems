<resources>

    <style name="Base.Theme.HammerSystems" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.HammerSystems" parent="Base.Theme.HammerSystems" />

    <style name="CostButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAppearance">@style/PizzaText.RedButton</item>
        <item name="android:textColor">@color/red_app</item>
        <item name="android:padding">1dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/red_app</item>
        <item name="cornerFamily">rounded</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAppearance">@style/PizzaText.Chip</item>
        <item name="android:elevation">10dp</item>
        <item name="chipCornerRadius">6dp</item>
    </style>

</resources>